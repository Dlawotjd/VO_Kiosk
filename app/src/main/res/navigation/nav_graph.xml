<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/facedetectFragment">

    <fragment
        android:id="@+id/facedetectFragment"
        android:name="com.vo.vo_kiosk.View.FaceDetectFragment"
        android:label="fragment_guide_line_fragement"
        tools:layout="@layout/fragment_facedetect" >
        <action
            android:id="@+id/action_facedetectFragment_to_choiceMenuFragment"
            app:destination="@id/choiceMenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/choiceMenuFragment"
        android:name="com.vo.vo_kiosk.View.ChoiceMenuFragment"
        android:label="fragment_choice_menu"
        tools:layout="@layout/fragment_choice_menu" >
        <action
            android:id="@+id/action_choiceMenuFragment_to_mainVoiceFragment"
            app:destination="@id/mainVoiceFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainVoiceFragment"
        android:name="com.vo.vo_kiosk.View.MainVoiceFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main_voice" >
        <action
            android:id="@+id/action_mainVoiceFragment_to_menuOrderFragment"
            app:destination="@id/menuOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuOrderFragment"
        android:name="com.vo.vo_kiosk.View.MenuOrderFragment"
        android:label="fragment_menu_orlder"
        tools:layout="@layout/fragment_menu_order" />
</navigation>