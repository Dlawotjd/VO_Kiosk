<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/shop_i_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불고기 버거"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_i_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감자튀김"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/shop_i_name"
        app:layout_constraintTop_toBottomOf="@+id/shop_i_name" />

    <TextView
        android:id="@+id/shop_i_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사이"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/shop_i_name"
        app:layout_constraintTop_toBottomOf="@+id/shop_i_side" />

</androidx.constraintlayout.widget.ConstraintLayout>