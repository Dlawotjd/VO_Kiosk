<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainVoiceFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 시작하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/voice_cardView"
        app:layout_constraintEnd_toEndOf="@+id/voice_cardView"
        app:layout_constraintStart_toStartOf="@+id/voice_cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/voice_cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/item_light_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cart_cardView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_voice"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_mic_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cart_cardView"
        app:layout_constraintEnd_toEndOf="@+id/cart_cardView"
        app:layout_constraintStart_toStartOf="@+id/cart_cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cart_cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/item_light_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/voice_cardView"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_cart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/shopping_cart" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>